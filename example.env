# This file is a template for setting up environment variables.
# Copy it to .env and fill in your actual values.

# Environment (dev, stage, prod, local)
APP_ENV=dev

# Server Port
SERVER_PORT=8080 # Or any other port, e.g., 4053

# MySQL Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_mysql_user
DB_PASSWORD=your_mysql_password
DB_NAME=your_database_name

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD= # Optional, if Redis requires a password
REDIS_DB=0 # Redis database number

# Mindbox API Configuration
MINDBOX_URL=https://api.mindbox.ru/v3/operations/sync
MINDBOX_OPERATION_PREFIX=Website # Prefix for operations (e.g., "Website" or "MobileApp")

MINDBOX_IOS_ENDPOINT_ID=your.IosAppEndpointId # E.g., com.yourcompany.IosApp
MINDBOX_IOS_AUTHORIZATION=SecretKey YOUR_IOS_SECRET_KEY

MINDBOX_ANDROID_ENDPOINT_ID=your.AndroidAppEndpointId # E.g., com.yourcompany.AndroidApp
MINDBOX_ANDROID_AUTHORIZATION=SecretKey YOUR_ANDROID_SECRET_KEY

MINDBOX_WEB_ENDPOINT_ID=your.WebsiteEndpointId # E.g., yourcompany.Website
MINDBOX_WEB_AUTHORIZATION=SecretKey YOUR_WEB_SECRET_KEY

# TLS Configuration
# Set to true to skip certificate verification (for dev/testing)
# Set to false for strict certificate verification (for production)
TLS_SKIP_VERIFY=true
HTTP_TIMEOUT=30s

# JWT Secret Key
JWT_SECRET_KEY=your_super_secret_jwt_key # Secret key for signing JWT tokens

# SMS Service Configuration
SMSC_LOGIN=your_smsc_login
SMSC_PASSWORD=your_smsc_password